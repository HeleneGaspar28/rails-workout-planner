<div class="container py-5" style="max-width: 560px;">

  <%= simple_form_for @routine, html: { multipart: true, class: "needs-validation" } do |f| %>
    <%= f.error_notification %>

    <div class="card shadow-sm border-0 p-4">
      <h1 class="mb-4 text-primary fw-bold text-center">New Routine</h1>

      <!-- Name -->
      <div class="mb-3">
        <%= f.label :name, "Name", class: "form-label" %>
        <%= f.input_field :name, class: "form-control", placeholder: "Full Body Workout", required: true %>
        <div class="form-text">Example: “Full Body Workout”.</div>
      </div>

      <!-- Photo -->
      <div class="mb-3">
        <%= f.label :photo, "Cover photo", class: "form-label" %>
        <%= f.input_field :photo, as: :file, class: "form-control", accept: "image/*", input_html: { id: "routine_photo" } %>
        <div class="mt-3">
          <img id="photo_preview" src="#" alt="" class="img-fluid rounded shadow-sm d-none" style="max-height: 220px; object-fit: cover;">
        </div>
        <div class="form-text">JPG or PNG.</div>
      </div>

      <!-- Exercises -->
      <div class="mb-3">
        <label class="form-label">Exercises</label>
        <div class="row row-cols-2 g-2">
          <% Exercise.order(:name).each do |exercise| %>
            <div class="col">
              <div class="form-check">
                <%= check_box_tag "routine[exercise_ids][]",
                                  exercise.id,
                                  false,
                                  id: dom_id(exercise),
                                  class: "form-check-input" %>
                <%= label_tag dom_id(exercise), exercise.name, class: "form-check-label text-muted" %>
              </div>
            </div>
          <% end %>
        </div>
        <!-- ensures param key exists even if none selected -->
        <%= hidden_field_tag "routine[exercise_ids][]", "" %>
        <div class="form-text">Pick one or more exercises to include.</div>
      </div>

      <div class="d-flex justify-content-between mt-4 align-items-center">
        <%= link_to "Cancel", routines_path, class: "text-secondary text-decoration-none" %>
        <%= f.button :submit, "Create", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener("change", function (e) {
    if (e.target && e.target.id === "routine_photo") {
      const [file] = e.target.files || [];
      const img = document.getElementById("photo_preview");
      if (file) { img.src = URL.createObjectURL(file); img.classList.remove("d-none"); }
      else { img.src = "#"; img.classList.add("d-none"); }
    }
  });
</script>
